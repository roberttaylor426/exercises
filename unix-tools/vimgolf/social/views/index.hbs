<!DOCTYPE html>
<html>
	<head>
		<title>Vimgolf Social</title>
		<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
		<link href="/style.css" rel="stylesheet" type="text/css">
		<meta charset="UTF-8">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.min.js" type="text/javascript"></script> 
		<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
	</head>
	<body>
		<div class="main_panel">
			<div class="instructions_panel">
				<h2>{{exercise_name}}</h2>
				<div>Start file:</div>
				<div><pre><code>{{exercise_start}}</code></pre></div>
				<div>End file:</div>
				<div><pre><code>{{exercise_end}}</code></pre></div>
			</div>
			<div class="high_scores_panel">
				<h2>Solutions:</h2>
				<div id="solutions-content-placeholder"/></div>
			</div>
		</div>
	</body>
</html>
<script>
	$.get('/solutions-template.hbs', function (source) {
		var template = Handlebars.compile(source);
		var data = { solutions: [
						{ submission: "abc123", author: "Mikey", score: 99 },
						{ submission: "dd123ZZ", author: "Claudy", score: 6 }
					] };
		var result = template(data);
		$("#solutions-content-placeholder").html(result);
	}, 'html')
</script>
